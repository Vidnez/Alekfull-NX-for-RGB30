<?xml version="1.0" encoding="UTF-8"?>

<!-- gamelists -->
<theme defaultView="detailed">
    <formatVersion>7</formatVersion>

    <!-- gamelists - basic view - simple list with plain background -->
        
        <view name="basic">
            <helpsystem name="help">
                <origin>0.5 0.5</origin>
                <fontSize>0.02</fontSize>
                <iconColor>ffffff</iconColor>
                <pos>0.5 0.977</pos>
                <textColor>${chelptext}</textColor>
            </helpsystem>

            <image name="art" extra="true">
                <pos>0 0.1</pos>
                <size>1 0</size>
            </image>

            <textlist name="gamelist">
                <pos>0.15 0.25</pos>
                <alignment>center</alignment>
                <size>0.7 0.6</size>
                <primaryColor>${cgamelisttext}</primaryColor>
                <selectedColor>${cselectedtext}</selectedColor>
                <selectorColor>${cselector}</selectorColor>
                <selectorColorEnd>${cselectorend}</selectorColorEnd>
                <selectorGradientType>${cgradienttype}</selectorGradientType>
                <fontPath>./fonts/${font4g}</fontPath>
                <fontSize>0.03</fontSize>
                <scrollSound>./assets/sounds/scroll.wav</scrollSound>
                <lineSpacing>1.9</lineSpacing>
            </textlist>

            <image name="background" extra="true">
                <origin>0 0</origin>
                <pos>0 0</pos>
                <size>1 1</size>
                <path>./assets/filters/${themecolor}/bg-simple.png</path>
            </image>

            <image name="logo">
                <pos>0.5 0.11</pos>
                <maxSize>0.300 0.20</maxSize>
                <path>./assets/logos/console/${system.theme}.svg</path>
                <path>./assets/logos/console/${system.theme}.png</path>
            </image>
        </view>


    <!-- gamelists - detailed view -->

        <view name="detailed">
            <helpsystem name="help">
                <origin>0.5 0.5</origin>
                <fontSize>0.02</fontSize>
                <iconColor>ffffff</iconColor>
                <pos>0.51 0.977</pos>
                <textColor>${chelptext}</textColor>
            </helpsystem>

            <image name="art" extra="true">
                <pos>0 0.1</pos>
                <size>1 0</size>
            </image>

            <textlist name="gamelist">
                <pos>0.525 0.23</pos>
                <size>0.415 0.66</size>
                <primaryColor>${cgamelisttext}</primaryColor>
                <selectedColor>${cselectedtext}</selectedColor>
                <selectorColor>${cselector}</selectorColor>
                <selectorColorEnd>${cselectorend}</selectorColorEnd>
                <selectorGradientType>${cgradienttype}</selectorGradientType>
                <fontPath>./fonts/${font4g}</fontPath>
                <fontSize>0.03</fontSize>
                <scrollSound>./assets/sounds/scroll.wav</scrollSound>
                <alignment>left</alignment>
                <lineSpacing>1.9</lineSpacing>
            </textlist>

            <image name="background" extra="true">
                <origin>0 0</origin>
                <pos>0 0</pos>
                <size>1 1</size>
                <path>./assets/filters/${themecolor}/bg-detailed.png</path>
            </image>

            <text name="md_lbl_releasedate, md_lbl_developer, md_lbl_lastplayed">
                <fontPath>./fonts/${font4g}</fontPath>
                <color>484859</color>
                <forceUppercase>true</forceUppercase>
                <fontSize>0.022</fontSize>
                <size>0 0</size>
                <glowColor>${ctextglow}</glowColor>
                <glowSize>0</glowSize>
            </text>

            <datetime name="md_releasedate,md_lastplayed">
                <pos>1 1</pos>
                <fontPath>./fonts/${font4g}</fontPath>
                <color>${cgdescription}</color>
                <alignment>left</alignment>
                <forceUppercase>true</forceUppercase>
            </datetime>

            <text name="md_lbl_lastplayed">
                <pos>0.09 0.734</pos>
            </text>

            <datetime name="md_lastplayed">
                <size>0 0</size>
                <alignment>left</alignment>
                <fontSize>0.022</fontSize>
                <pos>0.09 0.775</pos>
                <forceUppercase>true</forceUppercase>
            </datetime>

            <text name="md_lbl_releasedate">
                <pos>0.09 0.64</pos>
            </text>

            <datetime name="md_releasedate">
                <size>0 0</size>
                <alignment>left</alignment>
                <fontSize>0.022</fontSize>
                <pos>0.09 0.68</pos>
                <forceUppercase>true</forceUppercase>
            </datetime>

            <text name="md_lbl_developer">
                <pos>0.09 0.542</pos>
            </text>

            <text name="md_developer">
                <size>0 0</size>
                <fontPath>./fonts/${font4g}</fontPath>
                <fontSize>0.022</fontSize>
                <pos>0.09 0.58</pos>
                <color>${cgdescription}</color>
                <glowColor>${ctextglow}</glowColor>
                <glowSize>0</glowSize>
                <forceUppercase>true</forceUppercase>
            </text>

            <rating name="md_rating">
                <color>${cgdescription}</color>
                <pos>0.11 0.83</pos>
                <size>0.1 0.05</size>
                <filledPath>./assets/gamelist_icons/rating_filled.svg</filledPath>
                <unfilledPath>./assets/gamelist_icons/rating_unfilled.svg</unfilledPath>
            </rating>

            <video name="md_video">
                <pos>0.235 0.275</pos>
                <maxSize>0.4</maxSize>
                <delay>${delay}</delay>
                <effect>none</effect>
                <showSnapshotNoVideo>true</showSnapshotNoVideo>
                <showSnapshotDelay>true</showSnapshotDelay>
                <snapshotSource>${art}</snapshotSource>
                <zIndex>51</zIndex>
            </video>

            <image name="logo">
                <pos>0.73 0.10</pos>
                <maxSize>0.300 0.2</maxSize>
                <path>./assets/logos/console/${system.theme}.svg</path>
                <path>./assets/logos/console/${system.theme}.png</path>
            </image>
        </view>
 
    <!-- gamelists - grid view -->

        <view name="grid">
            <helpsystem name="help">
                <origin>0.5 0.5</origin>
                <fontSize>0.02</fontSize>
                <iconColor>ffffff</iconColor>
                <pos>0.5 0.977</pos>
                <textColor>${chelptext}</textColor>
            </helpsystem>
    
            <image name="art" extra="true">
                <pos>0 0.1</pos>
                <size>1 0</size>
            </image>

            <image name="background" extra="true">
                <origin>0 0</origin>
                <pos>0 0</pos>
                <size>1 1</size>
                <path>./assets/filters/${themecolor}/grid.png</path>
            </image>

            <imagegrid name="gamegrid">
                <pos>-0.01 0.1</pos>
                <size>1 0.85</size>
                <autoLayoutSelectedZoom>1</autoLayoutSelectedZoom>
                <imageSource>image</imageSource>
                <gameImage>./assets/no-image.png</gameImage>
                <scrollDirection>vertical</scrollDirection>
                <autoLayout>3 3</autoLayout>
                <margin>0.00001 0.015</margin>
                <padding>0.02 0.02 0 0</padding>
                <animateSelection>false</animateSelection>
                <maxlength>.5</maxlength>
                <showVideoAtDelay>${pandelay}</showVideoAtDelay>
                <effect>none</effect>
            </imagegrid>

            <text name="gridtile">
                <color>ffffff</color>
                <backgroundColor>ffffff00</backgroundColor>
                 <fontPath>./fonts/${font3s}</fontPath>
                <fontSize>0.02</fontSize>
                <alignment>center</alignment>
                <size>.05 0.24</size>
                <visible>true</visible>
            </text>

            <gridtile name="default">
                <backgroundColor>${cgtbg}</backgroundColor>
                <backgroundCornerSize>9 9</backgroundCornerSize>
                <selectionMode>image</selectionMode>
                <padding>9 9</padding>
            <imageColor>${cgtimage}</imageColor>
                </gridtile>

            <gridtile name="selected">
                <backgroundCenterColor>${ccenterfade}</backgroundCenterColor>
                <backgroundEdgeColor>${cgtbgedgeselect}</backgroundEdgeColor>
                <imageColor>${cgtimageselect}</imageColor>
            </gridtile>

            <text name="md_name">
                <visible>false</visible>
                <fontPath>./fonts/${font4g}</fontPath>
                <fontSize>0.03</fontSize>
                <origin>0 0</origin>
                <alignment>center</alignment>
                <pos>0.19 -0.016</pos>
                <size>0.63 0.09</size>
                <color>${cinfotext}</color>
            </text>
    
            <image name="gridtile.favorite">
                <path>./assets/favorites.svg</path>
                <pos>0.0 0</pos>
                <maxSize>0.25 0.25</maxSize>
                <origin>0 0</origin>
                <color>ffffff</color>
            </image>

            <image name="gridtile.favorite:selected">
                <path>./assets/favorites.svg</path>
                <color>${cgtbgedgeselect}</color>
            </image>

            <image name="gridtile.cheevos">
                <path>./assets/cheevos.svg</path>
                <pos>0 1</pos>
                <maxSize>0.25 0.25</maxSize>
                <origin>0 1</origin>
                <color>ffffff</color>
            </image>

            <image name="gridtile.cheevos:selected">
                <path>./assets/cheevos.svg</path>
                <color>${cgtbgedgeselect}</color>
            </image>
        </view>

</theme>
